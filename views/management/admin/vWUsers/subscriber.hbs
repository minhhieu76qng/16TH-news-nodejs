                    <ul class="menu-management">
                        <li class="menu-management-item">
                            <a class="link" href="#category-management"><i class="icon fa fa-list-alt"
                                    aria-hidden="true"></i>
                                <div class="linkText">Quản lý chuyên mục</div>
                            </a>
                        </li>
                        <li class="menu-management-item">
                            <a class="link" href="/tags"><i class="icon fa fa-tags" aria-hidden="true"></i>
                                <div class="linkText">Quản lý nhãn tag</div>
                            </a>
                        </li>
                        <li class="menu-management-item">
                            <a class="link dropdown" href="javascript:;"><i class="icon fa fa-th"
                                    aria-hidden="true"></i>
                                <div class="linkText">Quản lý bài viết</div>
                                <i class="fa fa-caret-down"></i>
                            </a>
                            <ul class="menu-management">
                                <li class="menu-management-item">
                                    <a class="link" href="/accepted-news">
                                        <i class="icon fa fa-check-square-o" aria-hidden="true"></i>
                                        <div class="linkText">Bài viết đã duyệt</div>
                                    </a>
                                </li>
                                <li class="menu-management-item">
                                    <a class="link" href="/not-accepted-news"><i class="icon fa fa-tasks"
                                            aria-hidden="true"></i>
                                        <div class="linkText">Bài
                                            viết chưa duyệt</div>
                                    </a>
                                </li>
                                <li class="menu-management-item">
                                    <a class="link" href="/published-news"><i class="icon fa fa-newspaper-o"
                                            aria-hidden="true"></i>
                                        <div class="linkText">Bài viết đã xuất bản</div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="menu-management-item">
                            <a class="link dropdown" href="javascript:;"><i class="icon fa fa-users"
                                    aria-hidden="true"></i>
                                <div class="linkText">Quản lý người dùng</div>
                                <i class="fa fa-caret-down"></i>
                                <!-- <i class="icon fa fa-chevron-right" aria-hidden="true"></i>    -->
                            </a>
                            <ul class="menu-management">
                                <li class="menu-management-item">
                                    <a class="link" href="/writer-management"><i class="icon fa fa-pencil-square-o"
                                            aria-hidden="true"></i>
                                        <div class="linkText">Phóng viên</div>
                                    </a>
                                </li>
                                <li class="menu-management-item">
                                    <a class="link" href="/editor-management"><i class="icon fa fa-user-plus"
                                            aria-hidden="true"></i>
                                        <div class="linkText">Biên tập viên</div>
                                    </a>
                                </li>
                                <li class="menu-management-item active">
                                    <a class="link" href="/subscriber-management"><i class="icon fa fa-address-book"
                                            aria-hidden="true"></i>
                                        <div class="linkText">Độc giả</div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col">
                <div class="wrapper wrapper-content">
                    <div class="content-menu-item" id="subscriber-management">
                        <h3 class="mb-3 mt-3">Danh sách độc giả</h3>
                        <div class="div-btn-control mb-3 mt-3">
                            <button type="button" class="btn btn-primary" id="createSubscriber" data-toggle="modal"
                                data-target="#CreateAccountModal" data-backdrop="static">Tạo tài khoản</button>
                        </div>
                        <table class="can-be-edit table table-hover table-bordered mb-0"
                            id="subscriber-management-table">
                            <col style="width:5%">
                            <col style="width:30%">
                            <col style="width:30%">
                            <col style="width:23%">
                            <col style="width:12%">

                            <thead class="thead-dark">
                                <tr>
                                    <th style="vertical-align: top;">#</th>
                                    <th style="vertical-align: top;">Họ tên</th>
                                    <th style="vertical-align: top;">Email</th>
                                    <th style="vertical-align: top;">Ngày sinh</th>
                                    <th style="vertical-align: top;">Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each this.subscribers}}
                                <tr onclick="openDetailAccountSubcriber(this, '{{exp_date}}')">
                                    <th scope="row" class="text-center">{{id}}</th>
                                    <td>{{name}}</td>
                                    <td>{{email}}</td>
                                    <td>{{dob}}</td>
                                    <td>{{{status}}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <ul class="pagination justify-content-center mt-4">
                            {{#each this.pages}}
                            {{#if active}}
                            <li class="page-item active" aria-current="page">
                                <a class="page-link" href="javascript:;">{{value}} <span
                                        class="sr-only">(current)</span></a>
                            </li>
                            {{else}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{value}}">{{value}}</a>
                            </li>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Modal: create account -->
<div class="modal fade" id="CreateAccountModal" tabindex="-1" role="dialog" aria-labelledby="CreateAccountModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CreateAccountModalLabel">Tạo tài khoản</h5>
                <button id="closeCreateAccountModal" type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form novalidate id="formRegister" action="/admin/register" method="POST" autocomplete="off">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Họ tên" autofocus>
                    </div>
                    <div class="form-group">
                        <input id="dtpicker_dob" type="text" class="form-control" name="dob" placeholder="Ngày sinh">
                    </div>
                    <div class="form-group">
                        <input id="txtEmail" type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Mật khẩu">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPw" placeholder="Nhập lại mật khẩu">
                    </div>
                    <div class="clearfix mt-4">
                        <button type="submit" name="" class="btn btn-primary">Đăng kí</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal: detail account-->
<div class="modal fade" id="DetailAccountModal" tabindex="-1" role="dialog" aria-labelledby="DetailAccountModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailAccountLabel">Thông tin tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form novalidate class="user-info view-info">
                    <div class="form-group">
                        <label for=""><b>ID</b></label>
                        <input disabled id="txtDetailID" name="id" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for=""><b>Họ tên</b></label>
                        <input disabled id="txtDetailName" name="name" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for=""><b>Email</b></label>
                        <input disabled id="txtDetailEmail" name="email" type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for=""><b>Ngày sinh</b></label>
                        <input disabled id="txtDetailDOB" name="dob" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for=""><b>Ngày hết hạn</b></label>
                        <input disabled id="txtDetailExpDate" name="exp_date" type="text" class="form-control">
                    </div>
                </form>
                <!-- Gia hạn độc giả -->
                <div class="pt-3" id="RenewSubscriber-container">
                    <form novalidate id="RenewForm" method="POST" action="">
                        <div class="form-group">
                            <label for="nOfDayRenew">
                                <h5>Nhập số ngày gia hạn</h5>
                            </label>
                            <input name="nDayRenew" type="text" class="form-control" id="nOfDayRenew">
                        </div>
                        <button type="submit" class="btn btn-primary">Hoàn
                            tất</button>
                        <button type="button" class="btn btn-secondary"
                            onclick="BackMainDetailAccount('RenewSubscriber-container')">Trở
                            về</button>
                    </form>
                </div>
            </div>
            <div class="modal-footer justify-content-center" id="DetailAccountModal-footer">
                <button type="button" class="btn btn-info" id="btnRenewSubscriber"
                    onclick="openContainerActionDetailAccount('RenewSubscriber-container')">Gia hạn</button>
                <a class="btn btn-danger" id="btnBan" href="">Cấm</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>